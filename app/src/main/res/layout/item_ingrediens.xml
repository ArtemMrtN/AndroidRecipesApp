<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/margin_three_fourths"
    android:layout_marginVertical="@dimen/margin_half">

    <TextView
        android:id="@+id/ingredientDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Творог"
        style="@style/PlainText14"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/ingredientDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ingredientDescription">

        <TextView
            android:id="@+id/ingredientQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="350"
            style="@style/PlainText14"/>

        <TextView
            android:id="@+id/ingredientUnitOfMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="г"
            style="@style/PlainText14"
            android:layout_marginStart="@dimen/margin_smallest"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>