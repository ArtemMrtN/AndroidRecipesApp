<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/margin_three_fourths"
    android:layout_marginVertical="@dimen/margin_half">

    <TextView
        android:id="@+id/ingredientDescription"
        style="@style/PlainText14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/ingredientQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/margin_half"
        tools:text="Творог" />

    <TextView
        android:id="@+id/ingredientQuantity"
        style="@style/PlainText14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ingredientDescription"
        app:layout_constraintEnd_toStartOf="@+id/ingredientUnitOfMeasure"
        app:layout_constraintTop_toTopOf="@+id/ingredientDescription"
        android:layout_marginEnd="@dimen/margin_smallest"
        tools:text="350" />

    <TextView
        android:id="@+id/ingredientUnitOfMeasure"
        style="@style/PlainText14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ingredientDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ingredientDescription"
        tools:text="г" />

</androidx.constraintlayout.widget.ConstraintLayout>